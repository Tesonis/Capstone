@model IEnumerable<ShowList.Models.Show>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm())
    {
    <p>
        Genre: @Html.DropDownList("showGenre",(SelectList)ViewBag.showGenre,"All",new { @class = "form-control"} )
        Title: @Html.TextBox("SearchString", null, new { @class = "form-control"}) <br />
        <input type="submit" value="Filter" />
    </p>
    }
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShowID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Network)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrimaryGenre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SencondaryGenre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RunYears)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Summary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NextEpisode)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShowID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Network)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryGenre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SencondaryGenre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RunYears)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NextEpisode)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ShowID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ShowID })
            </td>
        </tr>
    }

</table>
